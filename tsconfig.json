{
  "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "target": "ES2018",
        "lib": ["ES2018"],
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true
    },
  "exclude": [
        "node_modules",
        "./dist/**/*"
    ],
    "include": [
        "./index.ts"
    ]
}